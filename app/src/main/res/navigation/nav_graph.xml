<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.ca1.SearchFragment"
        android:label="search_fragment"
        tools:layout="@layout/search_fragment" >
        <action
            android:id="@+id/action_view_main"
            app:destination="@id/mainFragment" />
    </fragment>

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.ca1.MainFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment" >
        <argument
            android:name="searchQuery"
            app:argType="string"
            android:defaultValue="None" />

        <action
            android:id="@+id/action_view_cocktail"
            app:destination="@id/viewFragment" />
    </fragment>
    <fragment
        android:id="@+id/viewFragment"
        android:name="com.example.ca1.ViewFragment"
        android:label="view_fragment"
        tools:layout="@layout/view_fragment" >
        <argument
            android:name="cocktailId"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="cocktailInstructions"
            app:argType="string"
            android:defaultValue="None" />
        <argument
            android:name="cocktailName"
            app:argType="string"
            android:defaultValue="None" />
    </fragment>


</navigation>